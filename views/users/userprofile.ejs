          const message = "<%= message %>";
          const type = "<%= type %>";
    
          if (message && message.length > 0) {
              Swal.fire({
                  icon: type, // 'success', 'error', 'warning', 'info'
                  title: message,
                  showConfirmButton: true,
                  timer: 3000 
              });
          }
      </script>




</html>
