      Swal.fire({
          icon: type, // 'success', 'error', 'warning', 'info'
          title: message,
          toast: true,
          background: "black",
            color:"white",
            position: "top-end",
            showConfirmButton: false,
            timerProgressBar: true,
            timer: 5000,
            customClass: {
           popup: 'custom-toast'
    },
    didOpen: () => {
        const swalPopup = document.querySelector('.custom-toast');
        swalPopup.style.marginTop = '70px';  
        swalPopup.style.marginRight = '15px'; 
    }

      });
  }
</script>

