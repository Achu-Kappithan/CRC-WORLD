<script>
function updatecartcount() {
  console.log("cartfunction is working")
    fetch("/getcart_count") 
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById("CartCount").textContent = data.count; 
            } else {
                console.error("faild to update the cart count :", data.message);
            }
        })
        .catch(error => {
            console.error("error fetching cart count:", error);
        });
}  
updatecartcount() ;
</script>