<!DOCTYPE html>
<html lang="en">
  <%- include("../layouts/admin/admin_header.ejs") %>

  <body>
    <%- include("../layouts/admin/slidbar.ejs") %>

    <main class="main-wrap">
      <%- include("../layouts/admin/navbar.ejs") %> 
      <%-include("../layouts/admin/admin_footer.ejs") %>

      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Edit Productoffer</h2>
            <br />
          </div>
        </div>
        <div class="card">
          <div
            class="card-body"
            style="
              display: flex;
              justify-content: center;
              align-items: center;
              height: 100%;
            "
          >
            <div class="col-md-6">

                    <div class="card shadow-sm">
                      <div class="card-body">
                        <h5 class="card-title mb-4">Product offer</h5>
                        <div class="card mb-3">
                          <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">
                            </h6>
                            <p class="card-text">
                            </p>
                            <form method="post" action="/update_productoffer?id=<%= produtdata._id %>" id="referralOfferForm" onsubmit="return validate()">
                              <div class="mb-4">
                                  <label class="form-label">Offer Name</label>
                                  <input id="catofrname" name="ofrname" type="text" class="form-control" value="<%= produtdata.productOffer.offerName %>" placeholder="Enter offer name" />
                                  <span id="errorName" class="text-danger"></span>
                              </div>
                              <div class="mb-4">
                                  <label class="form-label">Description</label>
                                  <textarea id="catofrdescription" name="ofrdescription" class="form-control" required><%= produtdata.productOffer.offerdiscription %></textarea>
                                  <span id="errorDescription" class="text-danger"></span>
                              </div>
                              <div class="mb-4">
                                  <label class="form-label">product (Non Editable)</label>
                                  <input id="catname" type="text" class="form-control" value="<%= produtdata.name %>" readonly />
                                  <span id="errorCategory" class="text-danger"></span>
                              </div>
                              <div class="mb-4">
                                  <label class="form-label">Discount Percentage</label>
                                  <input id="catofrpercentage" name="ofrpercentage" type="number" class="form-control" value="<%= produtdata.productOffer.offerDiscountPercentage %>" placeholder="Enter discount percentage" />
                                  <span id="errorPercentage" class="text-danger"></span>
                              </div>
                              <div class="mb-4">
                                  <label class="form-label">Start Date (Non Editable)</label>
                                  <input id="catofrstartdate" name="" value="<%= new Date(produtdata.productOffer.offerStartDate).toLocaleDateString() %>" type="text" class="form-control" readonly />
                              </div>
                              <div class="mb-4">
                                  <label class="form-label">Expiry Date</label>
                                  <input id="catofrenddate" name="ofrenddate" value="<%= new Date(produtdata.productOffer.offerExpiryDate).toISOString().split('T')[0] %>" type="date" class="form-control" />
                                  <span id="errorEndDate" class="text-danger"></span>
                              </div>
                              <div class="text-center">
                                  <button type="submit" class="btn btn-md rounded font-sm hover-up">Save Updation</button>
                              </div>
                          </form>
                          </div>
                          </div>
                        </div>
                      </div>
                    </div>

            </div>
          </div>
        </div>
      </section>

  
<script>
    function validate() {
        let isValid = true;

        let name = document.getElementById("catofrname").value.trim();
        if (name.length < 3) {
            document.getElementById("errorName").textContent = "Name must be at least 3 characters";
            isValid = false;
        } else {
            document.getElementById("errorName").textContent = "";
        }

        let description = document.getElementById("catofrdescription").value.trim();
        if (description.length < 10) {
            document.getElementById("errorDescription").textContent = "Please enter a valid description (at least 10 characters)";
            isValid = false;
        } else {
            document.getElementById("errorDescription").textContent = "";
        }

        let discountPercentage = document.getElementById("catofrpercentage").value.trim();
        if (discountPercentage === "" || isNaN(discountPercentage) || discountPercentage < 0 || discountPercentage > 100) {
            document.getElementById("errorPercentage").textContent = "Please enter a valid discount percentage (0-100)";
            isValid = false;
        } else {
            document.getElementById("errorPercentage").textContent = "";
        }

        let endDate = document.getElementById("catofrenddate").value;
        let startDate = document.getElementById("catofrstartdate").value;
        if (new Date(endDate) <= new Date(startDate)) {
            document.getElementById("errorEndDate").textContent = "Expiry date must be after the start date";
            isValid = false;
        } else {
            document.getElementById("errorEndDate").textContent = "";
        }

        return isValid;
    }
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        
<script>
  const message = "<%= message %>";
  const type = "<%= type %>";

  if (message && message.length > 0) {
      Swal.fire({
        icon: type, // 'success', 'error', 'warning', 'info'
          title: message,
          showConfirmButton: true,
          toast: true,
          position: "top-end",
          showConfirmButton: false,
          timerProgressBar: true,
          timer: 3000,
      });
  }
</script>





    </main>
    <!-- content-main end// -->
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assets/js/vendors/chart.js"></script>

    <script src="assets/js/main.js" type="text/javascript"></script>
    <script src="assets/js/custom-chart.js" type="text/javascript"></script>
  </body>
</html>
