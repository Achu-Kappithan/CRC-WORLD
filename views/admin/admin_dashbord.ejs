<!DOCTYPE html>
<html lang="en">
  <%- include("../layouts/admin/admin_header.ejs") %>

  <body>
    <%- include("../layouts/admin/slidbar.ejs") %>

    <main class="main-wrap">
      <%- include("../layouts/admin/navbar.ejs") %>
      <%- include("../layouts/admin/admin_footer.ejs") %>

      <section class="content-main">
        <div class="content-header">
            <h2 class="content-title">Dashbord</h2>
            <div>
              <form action="/dashbord"  method="get" class="Search User">
                <div class="input-group">
                  <input
                    name="user_search"
                    list="search_terms"
                    type="text"
                    class="form-control"
                    placeholder="serch key"
                  />
                  <button class="btn btn-light bg" type="submit">
                    <i class="material-icons md-search"></i>
                  </button>
                </div>
              </form>
          

                <!-- <a href="#" class="btn btn-primary">Create new </a> -->
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <h4>User Details</h4>
                
            </header>
            <div class="card-body">
                <h5 class="card-title"></h5>
                <div class="mt-4">
                    <div class="text-muted font-size-14">
                        <div class="card-body">
                            <div class="table-responsive">
                                <div class="table-responsive">
                                    <table class="table align-middle table-nowrap mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col" class="text-center">
                                                    <div class="form-check align-middle">
                                                        <input class="form-check-input" type="checkbox" id="transactionCheck01">
                                                        <label class="form-check-label" for="transactionCheck01"></label>
                                                    </div>
                                                </th>
                                                <th class="align-middle" scope="col">user ID</th>
                                                <th class="align-middle" scope="col">user Name</th>
                                                <th class="align-middle" scope="col">Email</th>
                                                <!-- <th class="align-middle" scope="col">Total</th> -->
                                                <!-- <th class="align-middle" scope="col">active Status</th> -->
                                                <th class="align-middle" scope="col">contact number</th>
                                                <th class="align-middle" scope="col">active status</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                        
                                           <% for(let i =0; i<users.length ; i++){
                                            %>
                                          
                                            <tr>
                                                <td class="text-center">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="transactionCheck02">
                                                        <label class="form-check-label" for="transactionCheck02"></label>
                                                    </div>
                                                </td>
        
                                                <td><a href="#" class="fw-bold"><%= users[i]._id %></a> </td>
                                                <td><%= users[i].firstname + " " + users[i].lastname %></td>
                                                <td>
                                                    <%= users[i].email %>
                                                </td>
                                                <td>

                                                </td>
                                                <td>
                                                    <span class="badge badge-pill badge-soft-success"><%= users[i].is_active %></span>
                                                </td>
                                             
                                               <td>
                                                    <form action="/blockuser?id=<%= users[i]._id%>" method="post">
                                                        <button type="submit" class="btn btn-xs" style="background-color:red; color: white;">Block User</button>                                                        </form>
                                                </td>
                                                <td>
                                                    <form action="/unblockuser?id=<%= users[i]._id%>" method="post">
                                                        <button type="submit" class="btn btn-xs" style="background-color: #28a745; color: white;">Unblock User</button>
                                                    </form>
                                                </td>
                                            </tr>
                                      <%
                                          }
                                       %>
                                        </tbody>
                                    </table>
                                </div>
                            </div> <!-- table-responsive end// -->
                    </div>
                </div>
            </div>
        </div> <!-- card end// -->
    </section>


    </main>
    <!-- content-main end// -->
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assets/js/vendors/chart.js"></script>

    <script src="assets/js/main.js" type="text/javascript"></script>
    <script src="assets/js/custom-chart.js" type="text/javascript"></script>
  </body>
</html>







