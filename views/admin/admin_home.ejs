<script>

async function generatePDF(report) {
  try {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();

    doc.setFont("helvetica", "normal");

    doc.setFontSize(18);
    doc.text("Sales Report", 10, 10);
    doc.setFontSize(12);

    doc.text(`Total Sales: \u20B9${Number(report.totalSales).toFixed(2)}`, 10, 30);
    doc.text(`Total Quantity: ${report.totalQuantity}`, 10, 40);
    doc.text(`Total Orders: ${report.totalOrders}`, 10, 50);
    doc.text(`Total Coupon Discount: \u20B9${Number(report.totalCouponDiscount).toFixed(2)}`, 10, 60);
    doc.text(`Total Offer Discount: \u20B9${Number(report.totalOfferDiscount).toFixed(2)}`, 10, 70);

    let y = 90;
    doc.text("Date", 10, y);
    doc.text("Sales", 60, y);
    doc.text("Quantity", 110, y);
    doc.text("Orders", 160, y);

    y += 10;

    report.dailyData.forEach((data) => {
      console.log("Rendering data:", data);

      if (y > 280) {
        doc.addPage();
        y = 10; 
      }

      doc.text(data.date, 10, y);
      doc.text(`\u20B9${Number(data.sales).toFixed(2)}`, 60, y); // Ensure sales are formatted correctly
      doc.text(`${data.quantity}`, 110, y);
      doc.text(`${data.orders}`, 160, y);
      y += 10;
    });

    doc.save("sales-report.pdf");
  } catch (error) {
    console.error("Error generating PDF:", error);
    alert("Failed to generate PDF. Check the console for details.");
  }
}



</script>


<script>
  function generateExcel(report) {
    const workbook = XLSX.utils.book_new();

    const summary = [
      ["Total Sales", report.totalSales],
      ["Total Quantity", report.totalQuantity],
      ["Total Orders", report.totalOrders],
      ["Total Coupon Discount", report.totalCouponDiscount],
      ["Total Offer Discount", report.totalOfferDiscount],
    ];
    const summarySheet = XLSX.utils.aoa_to_sheet(summary);
    XLSX.utils.book_append_sheet(workbook, summarySheet, "Summary");

    const dailyData = [
      ["Date", "Sales", "Quantity", "Orders", "Coupon Discount", "Offer Discount"],
      ...report.dailyData.map((data) => [
        data.date,
        data.sales,
        data.quantity,
        data.orders,
        data.couponDiscount,
        data.offerDiscount,
      ]),
    ];
    const dataSheet = XLSX.utils.aoa_to_sheet(dailyData);
    XLSX.utils.book_append_sheet(workbook, dataSheet, "Daily Data");

    XLSX.writeFile(workbook, "sales-report.xlsx");
  }
</script>

