            </div>
          </div>

          

            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-header">
                  <h4 class="card-title">Sales Analytics</h4>
                </div>
                <div class="card-body">

                </div>
              </div>
            </div>
            
            <div class="col-md-4">
              <div class="card">
                <div class="card-body d-flex justify-content-between">
                  <a href="/admin_home?report=daily" class="btn <%= report === 'daily' ? 'btn-success' : 'btn-primary' %>">Today</a>
                  <a href="/admin_home?report=monthly" class="btn <%= report === 'monthly' ? 'btn-success' : 'btn-primary' %>">Monthly</a>
                  <a href="/admin_home?report=yearly" class="btn <%= report === 'yearly' ? 'btn-success' : 'btn-primary' %>">Yearly</a>
                </div>
              </div>
            </div>
          
            <div class="col-md-8">
              <div class="card">
                <div class="card-body">
                  <form method="post" action="/get_customereport" class="row g-3 align-items-center">
                    <div class="col-auto">
                      <label class="form-label">Custom Date Range</label>
                    </div>
                    <div class="col-auto">
                      <input name="startdate" type="date" class="form-control" id="startDate">
                    </div>
                    <div class="col-auto">
                      <span class="form-text">to</span>
                    </div>
                    <div class="col-auto">
                      <input type="date" name="enddate" class="form-control" id="endDate">
                    </div>
                    <div class="col-auto">
                      <button type="submit" class="btn btn-primary">Custom filter</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div> 
          
          <div class="col-lg-12">
            <div class="card mb-4">
              <div class="card-header">
                <h4 class="card-title">Sales Analytics</h4>
              </div>
              <div class="card-body">
                <canvas id="salesChart" width="800" height="400"></canvas>
              </div>
            </div>
          </div>
          
          <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
          <script>
          const salesData = JSON.parse(decodeURIComponent('<%= encodeURIComponent(JSON.stringify(report[0]?.dailyData || [])) %>'));
          
          if (salesData.length > 0) {
            const ctx = document.getElementById('salesChart')?.getContext('2d');
            if (ctx) {
              new Chart(ctx, {
                type: 'line',
                data: {
                  labels: salesData.map(data => data.date),
                  datasets: [{
                    label: 'Daily Revenue',
                    data: salesData.map(data => data.sales),
                    borderColor: '#4CAF50',
                    tension: 0.1,
                    fill: false
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  plugins: {
                    legend: { position: 'top' }
                  },
                  scales: {
                    x: { title: { display: true, text: 'Date' } },
                    y: { title: { display: true, text: 'Revenue' }, beginAtZero: true }
                  }
                }
              });
            } else {
              console.error("Canvas element with ID 'salesChart' not found");
            }
          } else {
            console.warn('No sales data available for the chart.');
            document.getElementById('salesChart').innerHTML = 'No sales data available';
          }
          </script>

</section>
          </body>

      <%- include("../layouts/admin/admin_footer.ejs") %>
