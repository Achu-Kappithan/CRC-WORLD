<!DOCTYPE html>
<html lang="en">
  <%- include("../layouts/admin/admin_header.ejs") %>

  <body>
    <%- include("../layouts/admin/slidbar.ejs") %>

    <main class="main-wrap">
      <%- include("../layouts/admin/navbar.ejs") %>

      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Add Brand</h2>
            <br />
            <% if (errorMessage.length > 0) { %>
            <div class="alert alert-danger">
              <p><%= errorMessage %></p>
            </div>
            <% } %>
          </div>
          <div>
            <input
              type="text"
              placeholder="Search Brand"
              class="form-control bg-white"
            />
          </div>
        </div>

        <div class="card">
          <div
            class="card-body"
            style="
              display: flex;
              justify-content: center;
              align-items: center;
              height: 100%;
            "
          >
            <div class="col-md-6">
              <form
                action="/addbrand"
                method="post"
                enctype="multipart/form-data"
                onsubmit="return validate()"
              >
                <div class="mb-4">
                  <label for="brandname" class="form-label">Name</label>
                  <input
                    name="brandname"
                    type="text"
                    class="form-control"
                    id="brandname"
                  />
                  <span id="errorname" class="text-danger"></span>
                </div>

                <div class="mb-4">
                  <label class="form-label">Description</label>
                  <textarea
                    name="branddescription"
                    class="form-control"
                    id="branddescription"
                  ></textarea>
                  <span id="errordis" class="text-danger"></span>
                </div>

                <div class="mb-4">
                  <label for="image" class="form-label">Upload Image</label>
                  <input
                    type="file"
                    name="image"
                    class="form-control"
                    id="image"
                  />
                  <span id="errorimage" class="text-danger"></span>
                </div>

                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">Create</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>

    <script>
      function validate() {
        let value = true;

        let name = document.getElementById("brandname").value.trim();
        let errorName = document.getElementById("errorname");

        if (name.length < 2) {
          errorName.textContent = "NAME MUST BE AT LEAST 4 CHARACTERS";
          value = false;
        } else {
          errorName.textContent = "";
        }

        let description = document
          .getElementById("branddescription")
          .value.trim();
        let errorDescription = document.getElementById("errordis");

        if (description.length < 10) {
          errorDescription.textContent =
            "DESCRIPTION MUST BE AT LEAST 10 CHARACTERS";
          value = false;
        } else {
          errorDescription.textContent = "";
        }

        let image = document.getElementById("image").files[0];
        let errorImage = document.getElementById("errorimage");

        if (!image) {
          errorImage.textContent = "PLEASE UPLOAD AN IMAGE";
          value = false;
        } else {
          const validImageTypes = [
            "image/jpeg",
            "image/png",
            "image/gif",
            "image/jpg",
            "image/webp",
          ];
          if (!validImageTypes.includes(image.type)) {
            errorImage.textContent =
              "ONLY IMAGE FILES (JPG, PNG, GIF) ARE ALLOWED";
            value = false;
          } else {
            errorImage.textContent = "";
          }
        }

        return value;
      }
    </script>

    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assets/js/vendors/chart.js"></script>
    <script src="assets/js/main.js" type="text/javascript"></script>
    <script src="assets/js/custom-chart.js" type="text/javascript"></script>
  </body>
</html>
